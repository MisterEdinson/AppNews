<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    >

  <ImageView
      android:id="@+id/imgItemHeader"
      android:layout_width="match_parent"
      android:layout_height="240dp"
      android:src="@drawable/item_img_news"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:contentDescription="@string/item_head_text" />

  <TextView
      android:id="@+id/tvItemHeader"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:textColor="@color/black"
      android:text="@string/item_head_text"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imgItemHeader" />

  <TextView
      android:id="@+id/tvItemAuth"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@string/item_auth_text"
      app:layout_constraintEnd_toEndOf="@+id/tvItemHeader"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/tvItemHeader"
      app:layout_constraintTop_toBottomOf="@+id/tvItemHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>